  <!-- ==================== MACROS ==================== -->
  
  <!-- Author macro: NamaBelakang InisialPertama (tanpa titik) -->
  <macro name="author">
    <names variable="author">
      <!-- `initialize-with` kosong akan membuat inisial tanpa titik -->
      <name name-as-sort-order="all" sort-separator=" " initialize-with="" delimiter=", " delimiter-precedes-last="always"/>
      <et-al font-style="italic"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <text variable="title"/>
      </substitute>
    </names>
  </macro>

  <!-- Author macro for in-text citation -->
  <macro name="author-citation">
    <names variable="author">
      <name form="short" initialize-with=""/>
      <substitute>
        <text variable="title"/>
      </substitute>
    </names>
  </macro>

  <!-- Editor macro -->
  <macro name="editor">
    <names variable="editor">
      <name sort-separator=" " initialize-with="" delimiter=", " delimiter-precedes-last="always"/>
      <label form="short" prefix=", " suffix="."/>
    </names>
  </macro>
  
  <!-- Publisher and location macro -->
  <macro name="publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>

  <!-- Accessed date macro for internet sources -->
  <macro name="accessed">
    <group prefix=" [diakses " suffix="]">
      <date variable="accessed" form="text">
        <date-part name="year"/>
        <date-part name="month" form="short" prefix=" " suffix=" "/>
        <date-part name="day"/>
      </date>
    </group>
  </macro>

  <!-- Title for book/report/thesis -->
  <macro name="title">
    <text variable="title"/>
  </macro>
  
  <!-- ==================== CITATION ==================== -->
  
  <citation et-al-min="3" et-al-use-first="1" disambiguate-add-year-suffix="true" collapse="year-suffix">
    <sort>
      <key macro="author-citation"/>
      <key variable="issued"/>
    </sort>
    <layout prefix="(" suffix=")" delimiter="; ">
      <group delimiter=" ">
        <group delimiter=" dan ">
          <text macro="author-citation"/>
          <text macro="author-citation" suffix="."/>
        </group>
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </group>
    </layout>
  </citation>
  
