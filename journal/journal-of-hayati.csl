<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" version="1.0" demote-non-dropping-particle="never" default-locale="en-US">
  <info>
    <title>HAYATI Journal of Biosciences</title>
    <title-short>HAYATI J Biosci</title-short>
    <id>http://www.zotero.org/styles/journal-of-hayati</id>
    <link href="http://www.zotero.org/styles/journal-of-hayati" rel="self"/>
    <link href="https://journal.ipb.ac.id/index.php/hayati/AuthorsGuideline" rel="documentation"/>
    <author>
      <name>Bambang Suryobroto</name>
      <email>bsuryobroto@gmail.com</email>
      <email>suryobroto@apps.ipb.ac.id</email>
    </author>
    <category citation-format="author-date"/>
    <category field="science"/>
    <summary>The author-date style for the HAYATI Journal of Biosciences, based on its author guidelines. Note: There were contradictory examples in the guidelines; this file prioritizes the most detailed examples. Assisted by glm-4.6 on Ollama.</summary>
    <updated>2023-10-27T11:30:00+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  
  <!-- ==================== MACROS ==================== -->
  
  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="all" sort-separator=", " initialize-with="." delimiter=", " delimiter-precedes-last="always"/>
      <label form="short" prefix=" "/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
        <text macro="title"/>
      </substitute>
    </names>
  </macro>
  
  <macro name="editor">
    <names variable="editor">
      <name sort-separator=", " initialize-with="." delimiter=", " delimiter-precedes-last="always"/>
      <label form="short" prefix=" (" suffix=".)"/>
    </names>
  </macro>
  
  <macro name="publisher-comma-location">
    <group delimiter=", ">
      <text variable="publisher"/>
      <text variable="publisher-place"/>
    </group>
  </macro>
  
  <macro name="location-colon-publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>
  
  <macro name="title">
    <text variable="title"/>
  </macro>

  <macro name="accessed-date">
    <group prefix="[Date accessed: " suffix="]">
      <date variable="accessed" form="text">
        <date-part name="day" suffix=" "/>
        <date-part name="month" form="long" suffix=" "/>
        <date-part name="year"/>
      </date>
    </group>
  </macro>

  <!-- ==================== CITATION ==================== -->
  
  <citation et-al-min="3" et-al-use-first="1" disambiguate-add-year-suffix="true" collapse="year-suffix-ranged">
    <sort>
      <key macro="author"/>
      <key variable="issued" sort="descending"/>
    </sort>
    <layout prefix="(" suffix=")" delimiter="; ">
      <group delimiter=", ">
        <group delimiter=" ">
          <text macro="author"/>
          <date variable="issued">
            <date-part name="year"/>
          </date>
        </group>
        <text variable="year-suffix"/>
      </group>
    </layout>
  </citation>
  
  <!-- ==================== BIBLIOGRAPHY ==================== -->
  
  <bibliography hanging-indent="true" second-field-align="flush" entry-spacing="0">
    <sort>
      <key macro="author"/>
      <key variable="issued" sort="ascending"/>
    </sort>
    <layout suffix=".">
      <choose>
        <!-- Journal Article -->
        <if type="article-journal">
          <group delimiter=" ">
            <text macro="author" suffix="."/>
            <date variable="issued" prefix=" " suffix=".">
              <date-part name="year"/>
            </date>
            <text variable="title" suffix="."/>
            <text variable="container-title" form="short" font-style="italic" suffix=" "/>
            <!-- CORRECTED LINE: Removed font-style="italic" -->
            <text variable="volume" suffix=","/>
            <text variable="page"/>
          </group>
        </if>
        
        <!-- Book -->
        <else-if type="book">
          <group delimiter=" ">
            <text macro="author" suffix="."/>
            <date variable="issued" prefix=" " suffix=".">
              <date-part name="year"/>
            </date>
            <group delimiter=", " font-style="italic">
              <text variable="title"/>
              <text variable="edition" prefix=" "/>
            </group>
            <text macro="publisher-comma-location"/>
          </group>
        </else-if>
        
        <!-- Chapter in Edited Book -->
        <else-if type="chapter">
          <group delimiter=" ">
            <text macro="author" suffix=","/>
            <date variable="issued" suffix=".">
              <date-part name="year"/>
            </date>
            <text variable="title" suffix=","/>
            <text value="in:"/>
            <text macro="editor" suffix=","/>
            <text variable="container-title" font-style="italic" suffix="."/>
            <text macro="publisher-comma-location" suffix=","/>
            <group delimiter=" " suffix=".">
              <text variable="page" prefix="pp. "/>
            </group>
          </group>
        </else-if>
        
        <!-- Thesis -->
        <else-if type="thesis">
          <group delimiter=" ">
            <text macro="author" suffix="."/>
            <date variable="issued" prefix=" " suffix=".">
              <date-part name="year"/>
            </date>
            <text variable="title" suffix=" [" font-style="normal"/>
            <text variable="genre" suffix="]."/>
            <text macro="location-colon-publisher"/>
          </group>
        </else-if>
        
        <!-- Conference Proceeding -->
        <else-if type="paper-conference">
          <group delimiter=" ">
            <text macro="author" suffix="."/>
            <date variable="issued" prefix=" " suffix=".">
              <date-part name="year"/>
            </date>
            <text variable="title" suffix="."/>
            <text value="In:"/>
            <text variable="container-title" suffix=","/>
            <text macro="location-colon-publisher" suffix="."/>
            <group delimiter=" " suffix=".">
              <text variable="page" prefix="pp. "/>
            </group>
          </group>
        </else-if>

        <!-- Webpage -->
        <else-if type="webpage">
          <group delimiter=" ">
            <text macro="author" suffix="."/>
            <date variable="issued" suffix=".">
              <date-part name="year"/>
            </date>
            <text variable="title" suffix="."/>
            <group delimiter=" ">
              <text value="Available at:"/>
              <text variable="URL"/>
            </group>
            <text macro="accessed-date"/>
          </group>
        </else-if>

        <!-- Fallback for other types -->
        <else>
          <group delimiter=". ">
            <text macro="author"/>
            <date variable="issued">
              <date-part name="year"/>
            </date>
            <group delimiter=". ">
              <text macro="title"/>
              <text variable="container-title" font-style="italic"/>
            </group>
          </group>
        </else>
      </choose>
    </layout>
  </bibliography>
</style>
